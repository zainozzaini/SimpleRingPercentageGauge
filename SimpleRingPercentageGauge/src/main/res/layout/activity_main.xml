<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ozdevcode.simpleringpercentagegauge.MainActivity">

    <com.ozdevcode.simpleringpercentagegauge.SimpleRingGauge
        xmlns:simpleGauge="http://schemas.android.com/apk/res/com.ozdevcode.simpleringpercentagegauge"
        android:id="@+id/ring_chart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        simpleGauge:gaugeColor="@color/blue"
        simpleGauge:textPercentColor="@color/blue"
        simpleGauge:animationDurationMilSec="3000"
        simpleGauge:radius="200"
        simpleGauge:percentage="0.56"
        simpleGauge:textPercentSize="120"/>



</RelativeLayout>
